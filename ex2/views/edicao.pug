extends layout

block content
  .w3-card-4
    header.w3-container.w3-green
      h1 Id: #{edicao._id}
      h1 Ano: #{edicao.anoEdição}
      h1 Organizador: #{edicao.organizacao}
      h1 Vencedor: #{edicao.vencedor}
    .w3-container 
      h2 Músicas
      table.w3-table-all 
        tr 
          td Nome:
          td Intérprete:
          td País:
        each musica in edicao.musicas
          tr 
            td= musica.título
            td= musica.intérprete
            td= musica.país
      a(href='/') Voltar
    footer.w3-container.w3-green
      address Generated by ENGWEB2025